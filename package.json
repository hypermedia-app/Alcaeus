    "node-fetch": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "string-to-stream": "^3.0.1",
    "tsx": "^4",
    "typescript": "^5.3.3",
    "whatwg-fetch": "^3.0.0",
    "wsrun": "^5.2.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --quiet --fix --ignore-path .eslintignore"
