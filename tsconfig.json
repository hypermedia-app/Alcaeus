{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "outDir": ".",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": false,
    "declaration": true,
    "declarationDir": ".",
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": [
      "es2017",
      "es2015",
      "dom"
    ],
    "esModuleInterop": true
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
